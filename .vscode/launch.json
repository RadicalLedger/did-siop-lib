{
    "type": "node",
    "request": "launch",
    "name": "Jest Tests",
    "program": "${workspaceRoot}\\node_modules\\jest\\bin\\jest.js",
    "args": [
        "-i"
    ],
    "preLaunchTask": "build",
    "internalConsoleOptions": "openOnSessionStart",
    "outFiles": [
        "${workspaceRoot}/dist/**/*"
    ],
    "envFile": "${workspaceRoot}/.env",
    "configurations": [
    {
        "command": "npm test",
        "name": "Run npm test",
        "request": "launch",
        "type": "node-terminal"
    }
    ]
}